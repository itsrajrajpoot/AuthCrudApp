@model Employee

<h2>Edit Employee</h2>

<form method="post">
    <input type="hidden" asp-for="Id" />

    <div>
        <label>Name</label>
        <input asp-for="Name" />
    </div>

    <div>
        <label>Department</label>
        <input asp-for="Department" />
    </div>

    <div>
        <label>Salary</label>
        <input asp-for="Salary" />
    </div>

    <button type="submit">Update</button>
</form>
